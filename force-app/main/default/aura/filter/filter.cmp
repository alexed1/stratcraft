<aura:component>

    <aura:attribute name="index" type="Integer" />
    <aura:attribute name="selectedNodeName" type="String" />
    <aura:attribute name="expression" type="String" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div>

        <div class="slds-float_right">
            <lightning:buttonIcon iconName="utility:delete" variant="border" onclick="{! c.handleDelete }" alternativeText="Delete filter"
            />
        </div>

        <div>
            Debug: {!v.selectedNodeName} {!v.expression}
        </div>
    </div>
</aura:component>