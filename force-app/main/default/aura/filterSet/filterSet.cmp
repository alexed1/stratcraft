<aura:component>

    <aura:attribute name="definition" type="String" />
    <aura:attribute name="filters" type="List" />
    <aura:attribute name="selectableNodes" type="List" />
    <aura:attribute name="treeItems" type="Object" />

    <aura:attribute name="onlyFirstMatch" type="Boolean" default="false" />

    <ltng:require scripts="{!$Resource.json5}" afterScriptsLoaded="{!c.doInit}" />

    <aura:handler name="removeFilter" event="c:filterDeleteRequestEvent" action="{!c.handleDelete }" />
    <aura:handler name="filterUpdated" event="c:filterUpdatedEvent" action="{!c.handleFilterUpdate }" />

    <aura:handler name="change" value="{!v.onlyFirstMatch}" action="{!c.handleOnlyFirstMatchUpdate}" />

    <lightning:card>
        <aura:set attribute="title">
            Filters
        </aura:set>
        <aura:set attribute="actions">
            <lightning:buttonIcon iconName="utility:add" variant="border" alternativeText="Add" iconClass="dark" onclick="{!c.handleAddFilter}"
            />
        </aura:set>
        <aura:set attribute="footer">
            <div class="slds-col">
                Debug: {!v.definition}
                <lightning:input type="checkbox" label="Allow only 1 Proposition to pass?" checked="{!v.onlyFirstMatch}" />
            </div>
        </aura:set>

        <aura:if isTrue="{!v.filters.length == 0}">
            <div>
                No filters added yet
            </div>
        </aura:if>

        <div>
            <aura:iteration items="{!v.filters}" var="filter" indexVar="index">
                <div>
                    <c:filter index="{!index}" selectedNodeName="{!filter.selectedNodeName}" expression="{!filter.expression}" selectableNodes="{!v.selectableNodes}"
                    />
                </div>
            </aura:iteration>
        </div>
    </lightning:card>

</aura:component>