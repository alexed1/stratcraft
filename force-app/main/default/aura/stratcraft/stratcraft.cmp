<aura:component implements="flexipage:availableForAllPageTypes" controller="StrategyCrafterController">

<aura:attribute name="strategyXML" type="String" />
<aura:attribute name="strategyJSON" type="String" />
<aura:attribute name="foo" type="String" />
<aura:attribute name="strat" type="Strategy" />
<aura:attribute name="treeItems" type="String" />
<aura:handler name="init" value="{!this}" action="{!c.init}" />
<aura:handler name="setStrategy" event="c:compEvent" action="{!c.setStrategy}"/>

<aura:registerEvent name="setStrategy" type="c:compEvent"/>



	<div class="slds-card" >
		<lightning:spinner aura:id="mySpinner" class="slds-hide" size="large" />
		Header
		<p></p>
	 
		<div aura:id="fileInput" ondragover="{!c.onDragOver}" ondrop="{!c.onDrop}" >Drop Here!</div> 
	 
		<div class="slds-grid ">

		  <div class="slds-col">
		  	<div class="myHeading">Node Tree	</div>

		  	<lightning:tree items="{! v.treeItems }" header="Nodes" onselect="{!c.handleTreeSelect}"/>


		  </div>

		  <div class="slds-col">	  	
		  	<h2>Node Properties</h2>
		  	
		  	{!v.body}
		  </div>

		</div>
	</div>
</aura:component>	
