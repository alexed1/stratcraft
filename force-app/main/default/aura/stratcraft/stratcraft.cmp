<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller="ParseStrategyXML">

<aura:attribute name="strategyXML" type="String" />
<aura:attribute name="foo" type="String" />
<aura:attribute name="treeItems" type="String" />
<aura:handler name="init" value="{!this}" action="{!c.init}" />
	<div class="slds-card" >
		Header
		<p></p>
	 
		<div aura:id="fileInput" ondragover="{!c.onDragOver}" ondrop="{!c.onDrop}" >Drop Here!</div> 
	 
		<div class="slds-grid ">

		  <div class="slds-col">
		  	<h2>Node Tree	</h2>

		  	<lightning:tree items="{! v.treeItems }" header="Nodes" onselect="{!c.handleTreeSelect}"/>


		  </div>

		  <div class="slds-col">	  	
		  	<h2>Node Properties</h2>
		  	
		  	{!v.body}
		  	<!-- additional buttons for testing functionality -->
		  	<!--<lightning:button variant="brand" label="New1" onclick="{! c.handleCreateComponents }"/>
		  	<lightning:button variant="brand" label="Submit15" onclick="{! c.handleClick }"/>	-->
		  </div>

		</div>
	</div>
</aura:component>	
